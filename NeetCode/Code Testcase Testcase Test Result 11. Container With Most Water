/**
 * @param {number[]} height
 * @return {number}
 */
var maxArea = function (height) {
  let left = 0;
  let right = height.length - 1;
  let max = 0;

  while (left < right) {
    let amount = Math.min(height[left], height[right]) * (right - left);
    max = amount > max ? amount : max;

    if (height[left] > height[right]) {
      right--;
    } else {
      left++;
    }
  }

  return max;
};

/*
1. Using two pointer techniqre
2. Calculate area/amount base on the height of the lower edge and horizontal lines
3. Moving the lower vertical height because the higher vertical line has more chance to > max when the horizontal line is shrink
*/
